<!-- *****************************************parts****************************************** -->
<%- include("parts/header") %>
<%- include("parts/navbar") %>

<div class="container">

<!-- *****************************************heading****************************************** -->
    <h3 class="text-center text-capitalize mb-3">create account</h3>

<!-- *****************************************signup form*************************************** -->
    <form action="/signup" method="post">
    <input type="text" name="username" class="form-control mb-3" placeholder="Username">
    <input type="email" name="email" class="form-control mb-3" placeholder="E-mail">
    <input type="password" name="password" class="form-control mb-3" placeholder="Password">
    <input type="password" name="confirmPassword" class="form-control mb-3" placeholder="Confirm Password">
    <div class="text-center">
    <input type="submit" class="btn btn-primary" value="Create Account">
    </div>
    </form>

<!-- *****************************************alert errors**************************************** -->
    <% for(err of error) { %>
        <div class="alert alert-danger mt-3 text-center"><%= err %></div>
    <% } %>

<!-- *****************************************already have acc************************************* -->
    <div class="text-center mt-5">
        Already have account ? 
        <a href="/signin">Login</a>
    </div>
</div>

<%- include("parts/footer") %>