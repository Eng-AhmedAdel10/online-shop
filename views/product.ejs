<!-- *************************************include parts**************************************** -->
<%- include("parts/header") %>
<%- include("parts/navbar") %>

<div class="container">

<!-- *************************************description product************************************ -->
<!-- alert error if no amount-->
<% if(error.length > 0) { %>
    <div class="alert alert-danger text-center"><%= error %></div>
        <% } %>

<!-- if no product -->
    <% if(product.length == 0) { %>
        <div class="alert alert-danger">this is no product matches this id</div>
<!-- else -->
        <% } else { %>
    <div class="row">

<!-- ****************card**************** -->
        <div class="col col-12 col-md-6 col-mb">
            <div class="card">
                <img src="/<%= product.image %>" class="card-img-top card-img" alt="img">
                <div class="card-body">
                    <!-- form -->
                    <form action="/cart" method="POST">
                        <input type="number" name="amount" class="form-control">
                        <input type="hidden" name="name" value="<%= product.name %>">
                        <input type="hidden" name="price" value="<%= product.price %>">
                        <input type="hidden" name="productId" value="<%= product._id%>">
                        <input type="hidden" name="redirectTo" value="/product/<%= product._id%>">
                        <div class="text-center">
                        <input type="submit" value="Add To Cart" class="btn btn-primary mt-3">
                        </div>
                        </form>
                </div>
              </div>
        </div>

<!-- ****************description**************** -->
        <div class="col col-12 col-md-6 ">
            <div class="description">
            <h2>product title: <small><%= product.name %></small></h2>
            <h2>product price: <small><%= product.price %> $</small></h2>
            <h2>product description: <small><%= product.description %></small></h2>
        </div>
        </div>
    </div>
    <% } %>
</div>


<%- include("parts/footer") %>
