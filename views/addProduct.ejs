<!-- ****************************************setup********************************************* -->
<%- include("parts/header") %>
<%- include("parts/navbar") %>

<!-- ****************************************container**************************************** -->
<div class="container">

<!-- ****************************************alert success**************************************** -->
    <% if(successMsg.length > 0) { %>
    <div class="alert alert-success text-center"><%= successMsg %></div>
    <% } %>

<!-- ****************************************heading**************************************** -->
    <h3 class="text-center text-capitalize mb-3">add product</h3>

<!-- ****************************************form**************************************** -->
    <form action="/admin/addProduct" method="POST" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="Name" class="form-control mb-3">
        <input type="text" name="price" placeholder="price" class="form-control mb-3">
        <textarea name="description" placeholder="Description" class="form-control mb-3"></textarea>
        <select name="category" class="custom-select mb-3">
            <option hidden value="" >Choose Category</option>
            <option value="clothes">clothes</option>
            <option value="phones">phones</option>
            <option value="computers">computers</option>
        </select>
        <input type="file" name="image" class="form-control mb-3">
        <div class="text-center">
        <input type="submit" value="Add Product" class="btn btn-primary mb-3">
    </div>
    </form>
<!-- ****************************************alert errors**************************************** -->
    <% for(errorMsg of errorsMsg) { %>
        <p class="alert alert-danger text-center"> <%= errorMsg %> </p>
    <% } %>
</div>


<%- include("parts/footer") %>
